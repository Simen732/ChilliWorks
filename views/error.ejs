<%- include('./partials/header') %>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 m-auto text-center">
      <div class="card">
        <div class="card-body">
          <h1 class="mb-4 text-danger">
            <i class="fas fa-exclamation-triangle"></i> <%= error.status || 500 %>
          </h1>
          <h2 class="mb-4"><%= message || "Something went wrong" %></h2>
          <p>We're sorry, but the page you're looking for could not be found or an error occurred.</p>
          <a href="/" class="btn btn-primary mt-3">
            <i class="fas fa-home"></i> Go Home
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>