<%- include('../partials/header') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-10 m-auto">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3><%= ticket.title %></h3>
          <span class="status status-<%= ticket.status.toLowerCase().replace(/\s+/g, '-') %>">
            <%= ticket.status %>
          </span>
        </div>
        
        <div class="card-body">
          <div class="ticket-meta mb-4">
            <div class="row">
              <div class="col-md-3">
                <strong>Category:</strong> <%= ticket.category %>
              </div>
              <div class="col-md-3">
                <strong>Priority:</strong> <%= ticket.priority %>
              </div>
              <div class="col-md-3">
                <strong>Created:</strong> <%= new Date(ticket.createdAt).toLocaleDateString() %>
              </div>
              <div class="col-md-3">
                <strong>Created by:</strong> <%= ticket.user.name %>
              </div>
            </div>
            <% if (ticket.assignedTo) { %>
              <div class="mt-2">
                <strong>Assigned to:</strong> <%= ticket.assignedTo.name %>
              </div>
            <% } %>
          </div>
          
          <div class="ticket-description mb-4">
            <h5>Description:</h5>
            <p><%= ticket.description %></p>
          </div>
          
          <% if (isAdmin) { %>
            <div class="admin-actions mb-4">
              <form action="/admin/tickets/<%= ticket._id %>/status?_method=PUT" method="POST" class="d-inline">
                <div class="form-group form-inline">
                  <label for="status" class="mr-2">Update Status:</label>
                  <select name="status" id="status" class="form-control mr-2">
                    <option value="Open" <%= ticket.status === 'Open' ? 'selected' : '' %>>Open</option>
                    <option value="In Progress" <%= ticket.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                    <option value="Resolved" <%= ticket.status === 'Resolved' ? 'selected' : '' %>>Resolved</option>
                    <option value="Closed" <%= ticket.status === 'Closed' ? 'selected' : '' %>>Closed</option>
                  </select>
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form>
            </div>
          <% } %>
          
          <div class="ticket-actions mb-4">
            <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
            <% if (ticket.user._id.toString() === user.id || isAdmin) { %>
              <a href="/tickets/<%= ticket._id %>/edit" class="btn btn-warning">Edit Ticket</a>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                Delete Ticket
              </button>
            <% } %>
          </div>
          
          <!-- Comments Section -->
          <div class="comments-section mt-5">
            <h4>Comments (<%= comments.length %>)</h4>
            
            <% if (comments.length > 0) { %>
              <div class="comments-list">
                <% comments.forEach(comment => { %>
                  <div class="comment">
                    <div class="meta">
                      <div>
                        <strong><%= comment.user.name %></strong>
                        <% if (comment.user.role === 'admin') { %><span class="badge badge-primary">Admin</span><% } %>
                      </div>
                      <small><%= new Date(comment.createdAt).toLocaleString() %></small>
                    </div>
                    <p class="text"><%= comment.text %></p>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <p class="text-muted">No comments yet.</p>
            <% } %>
            
            <!-- Add Comment Form -->
            <div class="add-comment mt-4">
              <h5>Add Comment</h5>
              <form action="/tickets/<%= ticket._id %>/comments" method="POST">
                <div class="form-group">
                  <textarea
                    name="text"
                    class="form-control"
                    rows="3"
                    placeholder="Write your comment here"
                    required
                  ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Comment</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this ticket? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form action="/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>